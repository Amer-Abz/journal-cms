generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  language  String // To store language code e.g., "en", "ar"
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slug     String // Will need to ensure uniqueness, potentially per language or globally
  author   User   @relation(fields: [authorId], references: [id])
  authorId Int

  @@unique([language, slug]) // Unique constraint for slug per language
  @@index([authorId])
  @@index([language])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("AUTHOR") // Example roles: "ADMIN", "EDITOR", "AUTHOR"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[] // Relation to Post model
}
